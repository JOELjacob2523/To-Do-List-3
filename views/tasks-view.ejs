<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>My Tasks</title>
	<link rel="stylesheet" href="/static/css/views.css">
	<script type="text/javascript" src="help.js"></script>
</head>

<body>
	<h1>My To Do List</h1>
	<div class="grid">
		<table class="table">
			<div class="header">
				<thead>
             	   <th>Subject</th>
					<th>Description</th>
              		<th>Date</th>
					<th>Time</th>
				</thead>
			</div>
			<div class="tableBody">
			<tbody>
				<% for(let task of tasks){ %>
					<tr class="line">
                        <td><%= task.Subject %></td>
						<td><%= task.Description%></td>
                        <td><%= task.Date%></td>
						<td><%= task.Time%></td>
						<td>
							<div class="checkbox">
								<input type="checkbox" id="checkbox">
								<label for="checkbox">Mark As Done</label>
							</div>
							<div class="buttons">
							<form action="/tasks/delete" method="POST">
								<input type="hidden" name="ListID" value="<%= task.ListID %>">
								<input type="submit" value="Delete">
							</form>
						</div>
						</td>
					</tr>
				<% } %>
			</tbody>
		</div>
		</table>
	</div>
	<a href="/tasks/create" class="button" id="back-btn">Click Here To Add A New Task</a>
	<script>
		const checkbox = document.querySelector('.checkbox');
		const item = document.querySelector('.item');

		checkbox.addEventListener('change', function() {
  		if (this.checked) {
   		item.classList.add('strikethrough');
  		} else {
    	item.classList.remove('strikethrough');
 	  }
	});

	</script>
</body>
</html>